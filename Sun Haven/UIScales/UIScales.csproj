        <Reference Include="Unity.TextMeshPro">
            <HintPath>..\libs\Unity.TextMeshPro.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <None Remove="notifications.png" />
        <None Remove="config.png" />
    </ItemGroup>

</Project>
