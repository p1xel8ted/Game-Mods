        </Reference>
        <Reference Include="DOTweenPro">
            <HintPath>..\libs\DOTweenPro.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <None Remove="thumb.png" />
        <None Remove="logo.png" />
        <None Remove="settings.png" />
    </ItemGroup>

</Project>
